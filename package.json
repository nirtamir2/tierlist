{
  "name": "tierlist",
  "type": "module",
  "scripts": {
    "build": "vinxi build",
    "ci": "pnpm run --parallel --aggregate-output \"/^(lint|format|type-check).*/\"",
    "dev": "vinxi dev",
    "format": "prettier \"**/*\" --write --ignore-unknown --log-level silent",
    "lint": "eslint --fix \"./src/**/*.{ts,tsx,js,jsx}\"",
    "prepare": "husky",
    "start": "vinxi start",
    "type-check": "tsc --pretty --noEmit"
  },
  "lint-staged": {
    "*.{ts,tsx,md}": "eslint --cache --fix",
    "*.{ts,tsx,css,html,svg,md,json,js}": "prettier --write"
  },
  "dependencies": {
    "@atlaskit/pragmatic-drag-and-drop": "^1.3.1",
    "@solid-mediakit/prpc": "^1.2.5",
    "@solid-mediakit/prpc-plugin": "^1.3.4",
    "@solidjs/meta": "^0.29.4",
    "@solidjs/router": "^0.14.5",
    "@solidjs/start": "^1.0.6",
    "@tanstack/solid-query": "^5.56.2",
    "autoprefixer": "^10.4.19",
    "clsx": "^2.1.1",
    "jiti": "^2.3.1",
    "postcss": "^8.4.40",
    "solid-js": "^1.8.23",
    "tailwindcss": "^3.4.7",
    "vinxi": "^0.4.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@nirtamir2/eslint-config": "0.0.2-beta.17",
    "@total-typescript/ts-reset": "^0.6.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^9.12.0",
    "eslint-plugin-format": "^0.1.2",
    "eslint-plugin-solid": "^0.14.3",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.5.2",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "type-fest": "^4.26.1",
    "typescript": "^5.6.2",
    "vite": "^5.1.6"
  },
  "engines": {
    "node": ">=20"
  }
}
